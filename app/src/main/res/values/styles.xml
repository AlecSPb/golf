<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item> <!-- 타이틀바 제거 -->
        <item name="android:windowFullscreen">true</item> <!-- 풀스크린 -->
        <item name="android:overScrollMode">never</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@mipmap/golfya_splash</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black_overlay</item>
    </style>

    <style name="OfflineTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item> <!-- 타이틀바 제거 -->
        <item name="android:windowFullscreen">true</item> <!-- 풀스크린 -->
    </style>

    <style name="Toolbar" parent="AppTheme">
        <!-- Toolbar Title Color -->
        <item name="android:textColorPrimary">@android:color/white</item>

        <!-- Toolbar Up Button Color -->
        <item name="android:textColorSecondary">@android:color/white</item>

    </style>


</resources>
